<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment_HotnNew">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Subcategory Navigation (TabLayout) -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/hotNewTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/black"
            app:tabTextColor="@color/white"
            app:tabSelectedTextColor="@color/black" />

        <!-- Subcategory Fragment Container (ViewPager or ViewPager2) -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/hotNewViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hotNewTabLayout" />

    </RelativeLayout>

</FrameLayout>