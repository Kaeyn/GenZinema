<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/black"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:background="@drawable/ttcs"
        android:layout_weight="2"
        app:cardCornerRadius="10dp">


        <ImageView
            android:id="@+id/imgColFilm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ttcs"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameColFilm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:text="Hẹn hò chốn công sở"/>

    <ImageButton
        android:id="@+id/playColFilm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/play_outline_40" />
</LinearLayout>